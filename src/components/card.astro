---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'
interface Props {
	article: CollectionEntry<'articles'>
}

const { title, image, altImage, category } = Astro.props.article.data
const slug = Astro.props.article.slug
const url = `/articles/${slug}`
---

<article class="grid max-w-xs gap-2 rounded-3xl border-2 border-black bg-white p-2 sm:max-w-sm">
	<a
		href={url}
		class="group relative aspect-video w-full overflow-hidden rounded-xl border-2 border-black bg-gray-100"
		{title}
	>
		<Image
			src={image}
			class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
			alt={altImage ?? ''}
			width={400}
		/>
		<!-- <img
			class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
			src={image.src}
			alt={altImage}
		/> -->
		<span
			class="absolute left-4 top-2 rounded-full border-2 border-black px-3 py-1 font-display"
			class:list={[
				category === '6eme' && 'bg-pink-400',
				category === '5eme' && 'bg-blue-400',
				category === '4eme' && 'bg-lime-400',
				category === '3eme' && 'bg-orange-400'
			]}>{category}</span
		>
	</a>

	<a href={url} class="group flex h-20 items-center" {title}>
		<h2
			class="line-clamp-2 font-display text-2xl transition-colors group-hover:text-fuchsia-500 sm:text-3xl"
		>
			{title}
		</h2>
	</a>
</article>
