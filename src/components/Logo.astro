---
import { title } from 'settings.json'

const letters = title.split('')
---

<div class="font-display text-6xl tracking-[-0.07em] text-logo-400 sm:text-8xl">
	{
		letters.map((l, i) => (
			<span
				class="inline-block origin-center animate-[logo-blop_0.4s_cubic-bezier(0.47,1.64,0.41,0.8)_both_calc(var(--index)_*_0.02s)] drop-shadow-[0.05em_0.05em_0px_rgba(0,0,0,1)]"
				style={`--index:${i}; --rotate:${i % 2 === 0 ? '3deg' : '-3deg'}`}
			>
				{l}
			</span>
		))
	}
</div>

<style>
	span {
		-webkit-text-stroke: 3px black;
		text-stroke: 3px black;
	}
	@keyframes logo-blop {
		from {
			transform: scale(0) rotate(var(--rotate));
		}
		to {
			transform: scale(0.9) rotate(var(--rotate));
		}
	}
</style>
